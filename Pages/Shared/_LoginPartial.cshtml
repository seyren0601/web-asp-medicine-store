@using Microsoft.AspNetCore.Identity;
@using Medicine_Store.DAL.Entities;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<script src="~/js/layout.js" type="text/javascript"></script>
<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity"
			   asp-page="/Account/Manage/Index" title="Manage">
				Hello @User.Identity!.Name
			</a>
			<div id="UserID" hidden>@UserManager.GetUserId(User)</div>
		</li>
		<li class="navitem">
			<form class="form-inline" asp-page="/Account/Logout"
				  asp-route-returnUrl="/Index"
				  asp-area="Identity" method="post">
				<button class="nav-link" btn btn-link text-dark" type="submit">Logout</button>
			</form>
		</li>
		<form class="d-flex nav-item">
			<button class="btn btn-outline-dark" asp-page="/Cart">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
					<path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
				</svg>
				Giỏ hàng
				<span class="badge bg-dark text-white ms-1 rounded-pill" id="cart_amount">0</span>
			</button>
		</form>
		<!--Cart button-->
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>